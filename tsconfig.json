{
  "compilerOptions": {
    /* Module */
    "target": "es2016",
    "module": "ES6",
    "rootDir": "./",
    "moduleResolution": "node",

    /* Emit */
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true
  },
  // exclude dist files
  "exclude": ["./dist", "node_modules", "./dist/types"]
}
